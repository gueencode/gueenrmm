    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/api/gueenrmm/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true
        },
        {
            "name": "Django: Docker Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "preLaunchTask": "docker debug",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/api/gueenrmm",
                    "remoteRoot": "/workspace/api/gueenrmm"
                }
            ]
        }
    ]
}